<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".activityHomeMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ema001"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@mipmap/ic_confirmation"
            android:text="EMA001"
            android:textColor="#012060"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ema002"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@mipmap/ic_confirmation"
            android:text="EMA002"
            android:textColor="#012060"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ema003"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@mipmap/ic_confirmation"
            android:text="EMA003"
            android:textColor="#012060"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ema004"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@mipmap/ic_confirmation"
            android:text="EMA004"
            android:textColor="#012060"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ema005"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@mipmap/ic_confirmation"
            android:text="EMA005"
            android:textColor="#012060"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/arial"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/msg"
            android:text="No Invitation Send yet"
            android:textColor="#012060"
            android:fontFamily="@font/cambriab"
            android:textSize="30sp"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="normal|bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>