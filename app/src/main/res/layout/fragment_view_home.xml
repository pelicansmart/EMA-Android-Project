<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".activityHomeMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/btn_contacts"
                android:drawablePadding="0dp"
                android:padding="15dp"
                android:drawableTop="@drawable/ic_contacts_home"
                android:text="Contacts"
                android:textAlignment="center"
                android:background="@drawable/mybutton2"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="190dp"
                android:fontFamily="@font/cambriab"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/btn_events"
                android:drawablePadding="0dp"
                android:padding="15dp"
                android:drawableTop="@drawable/ic_events_home"
                android:text="Events"
                android:background="@drawable/mybutton2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/cambriab"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textStyle="normal|bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/btn_confirmations"
                android:drawablePadding="0dp"
                android:padding="16dp"
                android:drawableTop="@drawable/ic_confirmation_home"
                android:text="Confirmation"
                android:textAlignment="center"
                android:background="@drawable/mybutton2"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="190dp"
                android:fontFamily="@font/cambriab"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/btn_profile"
                android:drawablePadding="0dp"
                android:padding="15dp"
                android:drawableTop="@drawable/ic_profile_home"
                android:text="Profile"
                android:background="@drawable/mybutton2"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/cambriab"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textStyle="normal|bold" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>